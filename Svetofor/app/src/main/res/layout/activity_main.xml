<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ua.at.fvi.svetofor.MainActivity"
    android:background="@color/redColor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/red"
        android:layout_below="@+id/buttonBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp" />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/red"
        android:onClick="onRedButtonClick" />

    <Button
        android:id="@+id/buttonYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonRed"
        android:text="@string/yellow"
        android:onClick="onYellowButtonClick" />

    <Button
        android:id="@+id/buttonGreen"
        android:text="@string/green"
        android:onClick="onGreenButtonClick"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshapegreen"
        android:shadowColor="#49A831"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:layout_below="@+id/buttonBlue"
        android:layout_alignRight="@+id/buttonBlue"
        android:layout_alignEnd="@+id/buttonBlue" />

    <Button
        android:id="@+id/buttonBlue"
        android:textColor="#FF1E0D8C"
        android:textSize="21sp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshapeblue"
        android:shadowColor="#FFA8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="onBlueButtonClick"
        android:text="@string/blue"
        android:layout_below="@+id/buttonYellow"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/pink"
        android:id="@+id/buttonPink"
        android:onClick="onPinkButtonClick"
        android:textColor="#FF360120"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/buttonshapepink"
        android:shadowColor="#FFA8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/buttonGreen"
        android:layout_alignLeft="@+id/buttonBlue"
        android:layout_alignStart="@+id/buttonBlue" />
</RelativeLayout>